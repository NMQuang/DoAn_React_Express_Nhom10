<div class="panel-heading">
    <h3 class="panel-title pull-left fix">Thêm nhãn hiệu</h3>
	<a href="/brand/brandList" class="btn btn-default pull-right fix"><b><</b> Back</a>
</div>
<div class="panel-body">
    <form action="/brand/addBrand" method="POST" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="txtUsername" class="col-sm-2 control-label">Tên hãng sản xuất</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtBrandName" placeholder="Tên hãng" name="brandName" required>
            </div>
        </div>
        <div class="form-group">
            <label for="txtUsername" class="col-sm-2 control-label">Quốc gia</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtCountry" placeholder="Quốc gia" name="country" required>
            </div>
        </div>
        <div class="form-group">
            <label for="txtUsername" class="col-sm-2 control-label">Mô tả</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtDescription" placeholder="Mô tả" name="description" required>
            </div>
        </div>
        <div class="form-group">
            <label for="txtUsername" class="col-sm-2 control-label">Năm thành lập</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtFoundedYear" placeholder="Năm thành lập" name="foundedYear" required>
            </div>
        </div>
        {{#if showError}}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Lỗi!</strong> {{errorMsg}} ...
        </div>
        {{/if}}
        {{#if showResult}}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Thành công!</strong> Tạo nhãn hàng thành công.
        </div>
        {{/if}}
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-ok"></span>
                    Tạo nhãn hiệu mới
                </button>
            </div>
        </div>
    </form> 
</div>

